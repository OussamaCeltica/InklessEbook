<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context="com.devs.celtica.inkless.Users.Profile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/backk"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:scaleX="1.9"
            android:scaleY="1.9"
            android:src="@drawable/logo"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteTrans">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="115dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <!-- div book name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:lineSpacingExtra="-6dp"
                            android:textSize="20sp"
                            android:text="ةمقدمة لبن  التاريخية"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="17sp"
                            android:text="مقدمة لبن خلدون التاريخية"/>

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/MyRatingBar"
                            android:layout_marginRight="10dp"
                            android:stepSize="1.0"
                            android:layoutDirection="rtl"
                            android:rating="4"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- div option read -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layoutDirection="rtl">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_butt3"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/hear"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="18sp"
                            android:text="@string/profileBook_hear"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_butt3"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/book_bleu"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="18sp"
                            android:text="@string/profileBook_read"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_butt3"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/buy"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="18sp"
                            android:text="@string/profileBook_buy"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- div info about book -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="22sp"
                            android:text="@string/profileBook_rating"/>
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            style="@style/MyRatingBar"
                            android:layout_marginRight="10dp"
                            android:stepSize="1.0"
                            android:layoutDirection="rtl"
                            android:rating="4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="22sp"
                            android:text="@string/profileBook_edition"/>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:lineSpacingExtra="-7dp"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="22sp"
                            android:text="maison edition blida"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="22sp"
                            android:text="@string/profileBook_dateEdition"/>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="18sp"
                            android:text="2018-05-06"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="22sp"
                            android:text="@string/profileBook_dateEdition"/>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font1"
                            android:textColor="@color/BleuFonce"
                            android:textSize="18sp"
                            android:text="2018-05-06"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Menu 2-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="115dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom"
            android:background="@color/Gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="55dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@android:color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addlist"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/BleuFonce"
                    android:textSize="11sp"
                    android:text="@string/profileBook_addToList"/>

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleY="0.7"
                    android:src="@drawable/bookmark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/BleuFonce"
                    android:textSize="11sp"
                    android:text="@string/profileBook_save"/>

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/download"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/BleuFonce"
                    android:textSize="11sp"
                    android:text="@string/profileBook_download"/>

            </LinearLayout>




        </LinearLayout>

        <!-- Bottom Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/BleuNuit">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/user2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="@string/profile_user"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/stat"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="@string/profile_bestSel"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/loop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="@string/profile_search"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/prize"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="@string/profile_saves"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/home"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="@string/profile_home"/>

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</LinearLayout>
